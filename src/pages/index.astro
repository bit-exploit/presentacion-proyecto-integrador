---
import "../styles/global.css";

import MainSection from "../sections/m1/main.section.astro";
import Actividad1 from "../sections/m1/act1.section.astro";
import Actividad2 from "../sections/m1/act2.section.astro";
import Actividad3 from "../sections/m1/act3.section.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>Proyecto Integrador | EQUIPO 11</title>
    <meta name="author" content="bit-exploit" />
  </head>
  <body>
    <main class="presentation-container">
      <MainSection />

      <!-- <section class="bg-emerald-500">
        <h2>Introducción</h2>
      </section> -->

      <section class="bg-cyan-950 text-zinc-200 grid place-content-center">
        <h2 class="font-extrabold text-6xl">Módulo 1</h2>
      </section>
      <Actividad1 title="Cosmovisiones" />
      <Actividad2 title="Corrientes filosóficas" />
      <Actividad3 title="Sociedad, Cultura y Creencias" />
    </main>
  </body>
</html>

<script>
  document.addEventListener("keydown", (e: KeyboardEvent) => {
    const container = document.querySelector(
      ".presentation-container"
    ) as HTMLElement;
    if (!container) return;

    const sectionHeight = window.innerHeight;
    const currentScroll = container.scrollTop;

    if (e.key === "ArrowDown" || e.key === "ArrowRight") {
      // Siguiente sección
      container.scrollTo({
        top: currentScroll + sectionHeight,
        behavior: "smooth",
      });
    } else if (e.key === "ArrowUp" || e.key === "ArrowLeft") {
      // Sección anterior
      container.scrollTo({
        top: currentScroll - sectionHeight,
        behavior: "smooth",
      });
    }
  });
</script>
